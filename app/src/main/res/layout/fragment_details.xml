<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/details_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fragments.DetailsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/white"
        android:gravity="left"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="-5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">


        <ImageButton
            android:id="@+id/imageButtonDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="false"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/offWhite"
            android:contentDescription="delete entry"
            android:cropToPadding="false"
            android:elevation="20dp"
            android:scaleType="center"
            android:scaleX="0.75"
            android:scaleY=".75"
            android:src="@android:drawable/ic_menu_delete"
            app:tint="@color/pink"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Type of Expense: "
                android:textColor="@color/darkBlue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/poppins_bold"
                android:text=""
                android:textColor="@color/darkBlue"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Amount of Expense: "
                android:textColor="@color/darkBlue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/poppins_bold"
                android:text=""
                android:textColor="@color/darkBlue"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Date of Expense: "
                android:textColor="@color/darkBlue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/poppins_bold"
                android:text=""
                android:textColor="@color/darkBlue"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Note(s): "
                android:textColor="@color/darkBlue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/editTextNotes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:clickable="false"
                android:contextClickable="false"
                android:fontFamily="@font/poppins_bold"
                android:gravity="start|top"
                android:text=""
                android:textColor="@color/darkBlue"
                android:textSize="14sp"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Font size: "
                android:textColor="@color/darkBlue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/poppins_semibold"
                android:text=""
                android:textColor="@color/darkBlue"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/imageButtonPlus"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="#00FFFFFF"
                android:contentDescription="increase font size"
                android:scaleX="0.4"
                android:scaleY="0.4"
                android:src="@drawable/pluss"
                android:translationX="50dp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <ImageButton
                android:id="@+id/imageButtonMinus"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:backgroundTint="#00FFFFFF"
                android:contentDescription="decrease font size"
                android:scaleX="0.4"
                android:scaleY="0.4"
                android:src="@drawable/minus"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


        </LinearLayout>

    </LinearLayout>
</FrameLayout>